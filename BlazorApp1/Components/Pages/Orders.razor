@page "/orders"
@inject IOrderService OrderService
@inject NavigationManager Navigation
@using BlazorApp1.Domain.Entities
@using BlazorApp1.Domain.Enums
@using System.Linq

<PageTitle>My Orders - DeliveryPro</PageTitle>

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">My Orders</h1>
            <p class="text-xl text-gray-600">Track your order history and current orders</p>
        </div>

        @if (orders == null)
        {
            <div class="text-center">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto"></div>
                <p class="mt-4 text-gray-600">Loading orders...</p>
            </div>
        }
        else if (orders?.Count == 0)
        {
            <div class="text-center py-12">
                <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
                    <span class="text-4xl">üì¶</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No orders yet</h3>
                <p class="text-gray-600 mb-6">When you place orders, they will appear here</p>
                <a href="/menu" class="btn btn-primary">Browse Menu</a>
            </div>
        }
        else
        {
            <div class="space-y-6">
                @foreach (var order in orders?.OrderByDescending(o => o.CreatedAt) ?? Enumerable.Empty<Order>())
                {
                    <div class="card p-6 animate-fade-in">
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900">Order #@(order.Id?.Length > 8 ? order.Id[..8] : order.Id ?? "Unknown")</h3>
                                <p class="text-gray-600">@order.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                            <div class="mt-2 sm:mt-0">
                                <span class="@GetStatusBadgeClass(order.Status)">
                                    @GetStatusDisplay(order.Status)
                                </span>
                            </div>
                        </div>

                        <div class="border-t border-gray-200 pt-4">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-900 mb-2">Delivery Address</h4>
                                    <p class="text-gray-600">
                                        @(order.DeliveryAddress?.Street ?? "N/A")<br />
                                        @(order.DeliveryAddress?.City ?? "N/A"), @(order.DeliveryAddress?.State ?? "N/A") @(order.DeliveryAddress?.PostalCode ?? "N/A")
                                    </p>
                                    
                                    <h4 class="font-medium text-gray-900 mt-4 mb-2">Items (@(order.Items?.Count ?? 0))</h4>
                                    <ul class="space-y-1">
                                        @foreach (var item in order.Items ?? [])
                                        {
                                            <li class="flex justify-between text-sm">
                                                <span>@item.Quantity√ó @(item.ProductName ?? "Unknown Product")</span>
                                                <span>$@item.Subtotal.ToString("F2")</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                
                                <div class="ml-6 text-right">
                                    <p class="text-2xl font-bold text-gray-900">$@order.TotalAmount.ToString("F2")</p>
                                    @if (order.Status == OrderStatus.OutForDelivery)
                                    {
                                        <button class="btn btn-outline mt-2 text-sm" @onclick="@(() => TrackOrder(order.Id ?? ""))">
                                            üìç Track Order
                                        </button>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(order.Notes))
                            {
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <p class="text-sm text-gray-600"><strong>Notes:</strong> @order.Notes</p>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Order>? orders;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Initialize with empty list first
            orders = [];
            
            // Try to load from service
            var loadedOrders = await OrderService.GetOrdersAsync();
            
            if (loadedOrders?.Count == 0)
            {
                Console.WriteLine("No orders found, creating sample orders...");
                await CreateSampleOrders();
                loadedOrders = await OrderService.GetOrdersAsync();
            }
            
            orders = loadedOrders ?? [];
            Console.WriteLine($"Loaded {orders.Count} orders successfully");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            orders = [];
        }
    }

