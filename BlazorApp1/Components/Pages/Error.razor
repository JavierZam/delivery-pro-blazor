@page "/Error"
@using System.Diagnostics

<PageTitle>Error - DeliveryPro</PageTitle>

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full text-center">
        <div class="mb-8">
            <h1 class="text-6xl font-bold text-red-500 mb-4">Oops!</h1>
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Something went wrong</h2>
            <p class="text-gray-600 mb-8">An unexpected error occurred while processing your request.</p>
        </div>

        @if (ShowRequestId)
        {
            <div class="bg-gray-100 p-4 rounded-lg mb-6">
                <p class="text-sm text-gray-600">
                    <strong>Request ID:</strong> <code class="bg-white px-2 py-1 rounded">@RequestId</code>
                </p>
            </div>
        }

        <div class="space-y-4">
            <a href="/" class="btn btn-primary block">
                üè† Go Home
            </a>
            <button onclick="window.location.reload()" class="btn btn-outline block w-full">
                üîÑ Reload Page
            </button>
        </div>

        <div class="mt-8 text-sm text-gray-500">
            <p>If this problem persists, please contact our support team.</p>
        </div>
    </div>
</div>

@code {
    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized()
    {
        RequestId = Activity.Current?.Id ?? Guid.NewGuid().ToString();
    }
}
